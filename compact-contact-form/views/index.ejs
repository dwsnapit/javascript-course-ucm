<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" media="screen" href="style.css" />
</head>

<body>
  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">Email</th>
          <th scope="col">Subject</th>
          <th scope="col">Message</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i = 0; i < contacts.length; i++) {%>
          <tr>
            <td>
              <span>
                <%= i + 1 %>
              </span>
            </td>
            <td>
              <span>
                <%= contacts[i].firstName %>
              </span>
            </td>
            <td>
              <span>
                <%= contacts[i].lastName %>
              </span>
            </td>
            <td>
              <span>
                <%= contacts[i].email %>
              </span>
            </td>
            <td>
              <span>
                <%= contacts[i].subject %>
              </span>
            </td>
            <td>
              <span>
                <%= contacts[i].message %>
              </span>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>

  <br>
  <br>
  <div class="container">
    <form class="well span8" action="/saveCompactContact" , method="post">
      <div class="row">
        <div class="span3">
          <label>First Name</label>
          <input type="text" class="span3" name="firstName" id="firstName" placeholder="Your First Name">
          <label>Last Name</label>
          <input type="text" class="span3" name="lastName" id="lastName" placeholder="Your Last Name">
          <label>Email Address</label>
          <input type="text" class="span3" name="email" id="email" placeholder="Your email address">
          <label>Subject</label>
          <select class="span3" id="subject" name="subject">
            <option selected value="na">
              Choose One:
            </option>

            <option value="service">
              General Customer Service
            </option>

            <option value="suggestions">
              Suggestions
            </option>

            <option value="product">
              Product Support
            </option>
          </select>
        </div>

        <div class="span5">
          <label>Message</label>
          <textarea class="input-xlarge span5" id="message" name="message" rows="10">
          </textarea>
        </div>
        <button class="btn btn-primary pull-right" type="submit">Send</button>
      </div>
    </form>
  </div>

  <script src="app.js">
  </script>
</body>

</html>